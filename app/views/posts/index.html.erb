<div id="glb_main">
  <div id="glb_body" class="clearfix">
    <div id="content_container" class="clearfix">
      <div class="content">
        <section id="recommend" class="clearfix">
          <h2 class="title">おすすめレシピ</h2>
          <ul class="top_images clearfix" >
            <% @posts.each do |post| %>
              <li>
                <div class="image_container">
                  <p class="img">
                    <%= link_to(post_path(post)) do %>
                      <%= image_tag post.photos.first.image.url(:medium), class: "img_top" %>
                    <% end %>
                  </p>
                </div>
                <div class="profile">
                  <div class="content">
                    <div class="left">
                    </div>
                    <div class="right">
                    </div>
                  </div>
                  <div class="btn_block">
                    <div class="btn_like">
                      <div class="btn">
                        フォローする
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </section>
      </div>
      <div class ="side_bar">
      </div>
    </div>
  </div>
</div>
